{
	"name": "theme-components",
	"version": "1.0.0",
	"description": "A component library for building OJS and OMP themes.",
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.7.2",
		"@storybook/addon-actions": "^5.2.6",
		"@storybook/addon-knobs": "^5.2.6",
		"@storybook/addon-notes": "^5.2.6",
		"@storybook/addons": "^5.2.6",
		"@storybook/vue": "^5.2.6",
		"babel-eslint": "^10.0.3",
		"babel-loader": "^8.0.6",
		"babel-preset-vue": "^2.0.2",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-loader": "^3.0.3",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-vue": "^6.1.2",
		"husky": "^4.2.1",
		"prettier": "^1.19.1",
		"vue": "^2.6.10",
		"vue-loader": "^15.7.2",
		"vue-template-compiler": "^2.6.10"
	},
	"scripts": {
		"storybook": "start-storybook -s ./public -p 6006",
		"build-storybook": "build-storybook",
		"lint": "eslint stories/**/*.vue stories/**/*.stories.js stories/**/*.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint -- --fix"
		}
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true,
			"browser": true
		},
		"extends": [
			"plugin:vue/recommended",
			"eslint:recommended",
			"prettier/vue",
			"plugin:prettier/recommended"
		],
		"rules": {
			"vue/component-name-in-template-casing": [
				"error",
				"PascalCase"
			],
			"prettier/prettier": [
				"warn",
				{
					"bracketSpacing": false,
					"singleQuote": true,
					"useTabs": true,
					"htmlWhitespaceSensitivity": "ignore"
				}
			],
			"no-unused-vars": [
				"error",
				{
					"args": "none"
				}
			]
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/pkp/theme-components.git"
	},
	"author": "Public Knowledge Project",
	"license": "GPL",
	"bugs": {
		"url": "https://github.com/pkp/pkp-lib/issues"
	},
	"homepage": "https://github.com/pkp/theme-components#readme"
}
